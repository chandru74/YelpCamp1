<% include ../partials/header %>



<div class="container">
    <header class="jumbotron">
        <h1>Welcome to Yelpcamp</h1>
        <p>View our hand-picked campgrounds all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
    </header>
   
    <div class="text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-lg-3 col-md-4  col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp.image %>" style="width: 100%;height: 100%;">
                    <div class="caption">
                        <h4> <%= camp.name %></h4>
                    </div>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                </div>
                 
                   
                </div>
            <% }) %>
    </div>
        
</div>
<% include ../partials/footer %>