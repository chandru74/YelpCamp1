<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-fluid" src="<%= campground.image %>">
                <figcaption  class="figure-caption">
                    <h5><a><%= campground.name %></a></h5>
                    <h6 class="text-right">$10/night</h6>
                    <p class="text-justify"><%= campground.description %></p>
                </figcaption >
            </div>
            <div class="well">
                <div class="text-right">
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comment/new"> Add Comment</a>
                </div>
                <% campground.comments.forEach((comment)=>{ %>

                    <div class="row">
                        <strong><%= comment.author %></strong> 
                        <p class="text-right">10 days ago</p>
                        <p>
                            <%= comment.text %>
                        </p>
                    </div>
                    
                <% }) %>
            </div>
       
        </div>
    </div>
</div>


<% include ../partials/footer.ejs %>