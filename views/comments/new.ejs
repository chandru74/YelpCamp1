<% include ../partials/header %>  


<div class="container">
        <h1 style="text-align: center;">Add Comment to <%= campground.name %></h1>
   
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comment" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder=Author>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Add your comment here">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>                                                                                                                                      
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
</div>

<% include ../partials/footer %>